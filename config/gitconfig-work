  name = "Rafe Hart"
	email = rhart@starrez.com

[github]
  user = rafaelh

[credential]
  helper = store

[init]
  defaultBranch = main

[push]
  default = simple

[pull]
  rebase = false

[merge]
  conflictstyle = diff3
	tool = meld

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[format]
  pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset %C(bold yellow)%GK%Creset
  graph = tru

[diff]
  colorMoved = default
	tool = meld

[color "diff"]
  meta = 11
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[mergetool "meld"]
	trustExitCode = true
	cmd = meld --auto-merge \"$LOCAL\" \"$BASE\" \"$REMOTE\" --output \"$MERGED\"
[mergetool]
	keepBackup = false
[difftool]
	prompt = false
[difftool "meld"]
	cmd = meld \"$LOCAL\" \"$REMOTE\"
